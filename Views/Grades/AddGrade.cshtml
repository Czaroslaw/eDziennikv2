@model eDziennikv2.Models.ViewModels.GradesViewModel

@{
    ViewData["Title"] = "Dodaj ocenę";
}

<h1>Dodaj ocenę</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentId" />
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label">Przedmiot</label>
                <select class="form-select" asp-for="SubjectId" asp-items="Model.Subjects">
                    <option value="empty">-</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label">Ocena</label>
                <select class="form-select" asp-for="Grade" asp-items="Model.Grades">
                    <option value="empty">-</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Komentarz</label>
                <textarea asp-for="Description" class="form-control" /></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
